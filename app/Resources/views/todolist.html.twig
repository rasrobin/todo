{% extends '::base.html.twig' %}

{% block title -%}{{ pagetitle }}{% endblock %}

{% block body -%}
<div class="container">
    <div class="row">
        <h1>{{ pagetitle }}</h1>
    </div>

    <div class="row">
        <ul class="col-xs-12">
        {% for item in todolist %}

            <li>{{ item.title }}</li>

        {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}


{% block css -%}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}" />
{% endblock %}

{% block js -%}
    <link rel="stylesheet" href="{{ asset('js/bootstrap.min.js') }}" />
{% endblock %}
